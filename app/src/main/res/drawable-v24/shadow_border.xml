<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <layer-list>
        <item>
            <shape android:shape="rectangle">
                <solid android:color="#6ae9e9e9"/>
                <corners android:radius="15dp" />
            </shape>
        </item>

        <item android:left="5dp" android:right="3dp" android:top="0dp" android:bottom="3dp">
            <shape android:shape="rectangle">
                <solid android:color="#cef7f7f7"/>
                <corners android:radius="15dp" />
                <stroke android:width="1dp"
                    android:color="#57a0a0a0"/>
            </shape>
        </item>
    </layer-list>
</item>
</selector>