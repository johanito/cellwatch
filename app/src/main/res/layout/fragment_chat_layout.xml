<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.niden.cellwatchsharing.fragments.AnnouncementFragment"
    >

    <LinearLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:orientation="vertical">

        <ListView
            android:id="@+id/list_of_messages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="2"
            android:divider="@android:color/transparent"
            android:dividerHeight="16dp"
            android:stackFromBottom="true"
            android:transcriptMode="alwaysScroll" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="#ffffff"
            android:elevation="2dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_image"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:background="@android:drawable/ic_menu_add"
                android:onClick="openGallary" />

            <EditText
                android:id="@+id/editTextMessage"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff"
                android:hint="Type a message"
                android:inputType="textPersonName"
                android:textColorLink="@android:color/holo_blue_light" />

            <Button
                android:id="@+id/fragment_announcement_btn_post"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:elevation="2dp"
                android:background="@drawable/style_button_border_only"
                android:text="Send"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
